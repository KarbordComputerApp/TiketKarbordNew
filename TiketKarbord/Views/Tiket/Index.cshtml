                        <div class="col-md-5 col-sm-6 pull-left">
                            <button data-bind="text:translate('ثبت ارجاع')" type="button" id="saveErja" class="btn btn-primary  pull-left"><i class="fa fa-sign-in fa-lg fa-fw"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





