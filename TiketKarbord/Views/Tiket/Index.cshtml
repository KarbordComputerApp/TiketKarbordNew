            FromDate: false,
            isGregorian: false,
            englishNumber: false,
        });

    </script>
    <script src="~/Scripts/TiketIndex.js?dt=@(TiketKarbord.Controllers.Unit.UnitPublic.titleVerNumber)0"></script>
